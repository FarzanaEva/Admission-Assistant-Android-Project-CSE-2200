<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#343640"
    tools:context="com.example.user.admissionassistant.SecondActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_marginLeft="90dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/about"
            android:background="@drawable/about"
            android:layout_marginBottom="20dp"/>
        <Button
            android:layout_marginLeft="90dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/course"
            android:id = "@+id/Ccourses"
            android:text="courses"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:layout_marginLeft="90dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/scholarship"
            android:id="@+id/scholar"
            android:text="scholarship"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:layout_marginLeft="90dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/hostelfaci"
            android:id="@+id/hostel"
            android:text="hostel facilities"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:layout_marginLeft="90dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/contact"
            android:id="@+id/contact"
            android:text="contact info"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>

</RelativeLayout>
